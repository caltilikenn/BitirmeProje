<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context="followself.com.bitirmeprojesi.MainActivity">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <EditText
            android:id="@+id/et1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et2"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/et2"
            android:layout_gravity="center"
            android:layout_marginTop="81dp"
            android:layout_weight="0.07"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Mevcut Şifreniz"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/et1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:layout_weight="0.07"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Yeni Şifreniz"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/et2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:layout_weight="0.07"
            android:ems="10"
            android:fontFamily="serif"
            android:hint="Yeni Şifrenizi Onaylayınız"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btn1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/et2"
            android:layout_alignStart="@+id/et2"
            android:layout_below="@+id/et2"
            android:layout_marginTop="106dp"
            android:backgroundTint="@color/mor"
            android:drawableLeft="@drawable/ic_kaydet"
            android:text="Kaydet" />

        <Button
            android:id="@+id/btn2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn1"
            android:layout_alignBottom="@+id/btn1"
            android:layout_alignEnd="@+id/et2"
            android:layout_alignRight="@+id/et2"
            android:backgroundTint="@color/pembe"
            android:text="Vazgeç" />

        <Button
            android:id="@+id/btn3"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:backgroundTint="@color/mavi"
            android:drawableLeft="@drawable/ic_geri"
            android:text="Geri" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
